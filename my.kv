<MyBoxLayout>
    orientation: "vertical"
    rows:3
    scrollview:scrollview
    msg: msg
    msg_output:msg_output
    #myrecicleview: myrecicleview
    Label:
        size_hint_y: 0.1
        text: "TOP"
        canvas.before:
            Color:
                rgba: (0,0,1,1)#blue
            Rectangle:
                size:self.size
                pos:self.pos

    
    ScrollView:
        id: scrollview
        do_scroll_x:False
        do_scroll_y:True
        size:1,0.8
        Label:
            id:msg_output
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            halign:"right"
            canvas.before:
                Color:
                    rgba: (0,1,1,1)#blue
                Rectangle:
                    size:self.size
                    pos:self.pos
    
    FloatLayout:
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: (0,1,0,1) #green 
            Rectangle:
                size:self.size
                pos:self.pos
        Button:
            text: "send"
            size_hint: 0.2, 1
            font_size: 0.2 * self.width
            pos_hint: {"x":0.8,"y":0}
            on_press: root.send()
        
        TextInput:
            id: msg
            multiline: False
            size_hint: (.8,1)
            text_size: self.width, None
